#include "holberton.h"

/**
 * _puts - prints a string, followed by a new line, to stdout
 * @str: my string
 * Return: none.
 */

void _puts(char *str)
{

	char *p;

	p = str;

/**
 * la funcion recibe el parametro por *str
 * luego lo igualamos con lavariable p
 * esta entra en el while para que se recorra
 * siempre y cuando sea diferente al ultimo
 * caracter del string es decir hasta antes de \0
 * le aumeta en 1 para que siga recorriendo el string
 * finaliza con un salto de linea
 */


	while (*p != '\0')
	{
		_putchar(*p);
		p++;
	}
	_putchar('\n');
}
