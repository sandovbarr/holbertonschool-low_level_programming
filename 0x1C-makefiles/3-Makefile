CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm -f

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean: FORCE
	$(RM) *~ $(NAME)
FORCE:

oclean: FORCE
	$(RM) $(OBJ)
FORCE:

fclean: FORCE
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)
FORCE:

re:
	$(RM) $(OBJ)
	gcc -c $(SRC)
	$(CC) $(OBJ) -o $(NAME)
FORCE: